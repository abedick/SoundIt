<% provide(:title, "Forgot password") %>
<div class="row">
    <div class="row">
        <div class="col l8 offset-l2 s12">
            <div class="content_title">
                <i class="material-icons" style="font-size: 35px">account_box</i>Reset Password
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col l8 offset-l2 m12 s12">
            <div class="row">
                <div class="col l12 m12 s12 content_card z-depth-1"> 
                    <div class="row">
                        <div class="col s12">
                            <%= form_for(:password_reset, url: password_resets_path) do |f| %>
                            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>

                            <%= f.submit "Submit", class: "btn button_mod" %>
                            <% end %>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>