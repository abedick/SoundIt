<% provide(:title, @user.name + "'s profile") %>
<div class="row">
    <div class="col l10 offset-l1 m12 s12">
        <div class="row">
            <div class="col s12">
                <div class="content_title">
                    <i class="material-icons" style="font-size: 35px">account_box</i> <%= @user.name %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col m12">
                <div class="row">
                    <div class="col m4 s12">
                        <div class="row">

                            <% if logged_in? %>
                                <% if current_user.id == @user.id %>
                                    <span class="_title">My Communities</span>
                                <% else %>
                                    <span class="_title"><%= @user.name%>'s Communities</span>
                                <% end %>
                            <% else %>
                                <span class="_title"><%= @user.name%>'s Communities</span>
                            <% end %>
                            <div class="col m12 content_card z-depth-1">
                                <table class="bordered highlight">
                                    <% if @subscriptions.length  == 0 %>

                                        <span class="_diamond"><i class="material-icons" style="font-size: 14px">info_outline</i> <%= @user.name %>
                                            does not appear to have any subscriptions.</span><br>
                                    <% else %>
                                        <% for com in @subscriptions %>
                                            <tr><td class="fp_song_title"><%= link_to com.title, community_path(com) %></tr></td>
                                        <% end %>
                                    <% end %>
                                </table>
                            </div>

                        </div>

                        <div class="row">

                            <% if logged_in? %>
                                <% if current_user.id == @user.id %>
                                    <span class="_title">My Playlists</span>
                                <% else %>
                                    <span class="_title"><%= @user.name%>'s Playlists</span>
                                <% end %>
                            <% else %>
                                <span class="_title"><%= @user.name%>'s Playlists</span>
                            <% end %>
                            <div class="col m12 content_card z-depth-1">
                                <table class="bordered highlight">
                                    <% if @playlists.length  == 0 %>

                                        <span class="_diamond"><i class="material-icons" style="font-size: 14px">info_outline</i> <%= @user.name %>
                                            does not appear to have any playlists.</span><br>
                                    <% else %>
                                        <% for play in @playlists %>
                                            <tr><td class="fp_song_title"><%= link_to play.name, playlist_path(play) %></tr></td>
                                        <% end %>
                                    <% end %>
                                </table>
                            </div>

                        </div>
                    </div>

                    <div class="col m8">
                        <div class="row">
                            <% if logged_in? %>
                                <% if current_user.id == @user.id %>
                                    <span class="_title">My Posts</span>
                                <% else %>
                                    <span class="_title"><%= @user.name%>'s Posts</span>
                                <% end %>
                            <% else %>
                                <span class="_title"><%= @user.name%>'s Posts</span>
                            <% end %>
                            <div class="col m12  content_card z-depth-1">
                                <ul class="feed_listing">
                                    <table class="bordered highlight">
                                    <% if @microposts.length == 0%>
                                        <span class="_diamond"><i class="material-icons" style="font-size: 14px">info_outline</i> <%= @user.name %>
                                            does not appear to have any posts.</span><br>
                                    <% else %>
                                        <%= render @microposts %>
                                    <% end %>
                                    </table>
                                </ul>
                                <div class="right">
                                    <%= will_paginate @microposts %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
