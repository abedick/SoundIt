<% provide(:title, "Community Moderation") %>

<div class="row">
    <div class="row">
        <div class="col l11 offset-l1">
            <div class="content_title">
                <i class="material-icons" style="font-size: 35px">laptop_chromebook</i> Moderation
            </div>
        </div>
    </div>

    <%= render 'admin/navigation'%>

    <div class="col l8 s12">
        <div class="row">
            <div class="col s12 content_card z-depth-1">
                <span class="_diamond"><br>Moderating posts in <%= @community.title %>. Click on a post title to moderate it and to moderate comments.</span>
                <table class="bordered highlight">
                    <tr>
                        <th>Date</th>
                        <th>Post Name</th>
                        <th>Post Author</th>
                        <th>Comments</th>
                        <th>Score</th>
                        <th>Upvotes</th>
                        <th>Downvotes</th>
                        <th>Delete</th>
                    <tr>
                    <ul class="feed_listing" style="list-style: none;">
                        <% for each in @community.microposts %>
                            <%= render partial: "microposts/skinny", locals: {micropost: each} %>
                        <% end %>
                    </ul>
                </table>
            </div>
        </div>
    </div>
</div>